{
	"name": "atomed",
	"description": "The hackable text editor 2",
	"version": "0.0.1",
	"main": "./main/index.js",
	"config": {
		"forge": "./forge.config.js"
	},
	"scripts": {
		"dev": "concurrently --raw --kill-others 'npm:dev-vite' 'npm:dev-electron'",
		"build": "npm run build-vite && npm run build-electron",
		"dev-vite": "vite",
		"build-vite": "vite build",
		"dev-electron": "APP_DEV=true electron-forge start",
		"build-electron": "electron-forge package",
		"make-electron": "npm run build-vite && electron-forge make"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.64",
		"@electron-forge/maker-deb": "^6.0.0-beta.64",
		"@electron-forge/maker-rpm": "^6.0.0-beta.64",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.64",
		"@electron-forge/maker-zip": "^6.0.0-beta.64",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
		"concurrently": "^7.2.2",
		"electron": "19.0.6",
		"svelte": "^3.44.0",
		"vite": "^2.9.9"
	}
}
